# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/deepros_db

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO

# MQTT Broker Configuration
BROKER_MQTT_HOST=0.0.0.0
BROKER_MQTT_PORT=1883
BROKER_MQTT_KEEPALIVE=60
BROKER_MQTT_MAX_CONNECTIONS=1000

# WebSocket Configuration
BROKER_WEBSOCKET_HOST=0.0.0.0
BROKER_WEBSOCKET_PORT=9001
BROKER_WEBSOCKET_ENABLED=true

# Authentication
BROKER_ENABLE_AUTH=false
BROKER_USERNAME=admin
BROKER_PASSWORD=password

# TLS/SSL Configuration
BROKER_ENABLE_TLS=false
BROKER_TLS_CERT_FILE=/path/to/cert.pem
BROKER_TLS_KEY_FILE=/path/to/key.pem
BROKER_TLS_CA_FILE=/path/to/ca.pem

# Performance Settings
BROKER_MAX_MESSAGE_SIZE=268435455
BROKER_MAX_INFLIGHT_MESSAGES=20
BROKER_MAX_QUEUED_MESSAGES=100

# ROS Integration
BROKER_ROS_DOMAIN_PREFIX=ros/
BROKER_ENABLE_ROS_INTEGRATION=true

# Broker Logging
BROKER_LOG_LEVEL=INFO
BROKER_LOG_FILE=broker.log 